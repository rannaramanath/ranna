<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.habijabi.mealplanner" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SplashScreen"
            android:label="@string/app_name" >
        <intent-filter>
        <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="com.coderefer.androidsplashscreenexample.MAINACTIVITY" />


                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreateRecipe"
            android:label="@string/title_activity_create_recipe"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity android:name=".ViewRecipe" >
        </activity>
        <activity android:name=".RecipeActivity" >
        </activity>
        <activity android:name=".RandomReceipe" >
        </activity>
        <activity
            android:name=".SelIngredients"
            android:configChanges="orientation|screenSize" >
        </activity>
        <activity android:name=".AddIngredients" >
        </activity>
        <activity android:name=".SuggestRecipe" >
        </activity>
        <activity android:name=".PrintSuggestedRecipe" >
        </activity>
        <activity android:name=".Grocery" >
        </activity>
    </application>

</manifest>
