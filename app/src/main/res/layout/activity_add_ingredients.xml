<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.habijabi.mealplanner.AddIngredients">
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:hint="Add more ingredients"
        android:padding="10dp" />



    <Button
        android:id="@+id/done"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:background="@drawable/buttonshape"
        android:text="Done"
        android:onClick="add_more_done"
        android:padding="5dp"
        />
    <View
        android:layout_width="fill_parent"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_height="5dp"
        android:background="#479C47"/>


    <RelativeLayout android:id="@+id/frameLayout2"
        android:layout_width="367dp"
        android:layout_height="match_parent"
        android:visibility="invisible">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_vertical"
            android:text="You added the following ingredients"
            android:id="@+id/textView3"
            />

        <Button
            android:layout_width="95dp"
            android:layout_height="45dp"
            android:text="Add to the list"
            android:id="@+id/button2"
            android:background="@drawable/buttonshape"
            android:onClick="add_ingredients_to_db"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            />

        <Button
            android:background="@drawable/buttonshape"
            android:layout_width="95dp"
            android:layout_height="45dp"
            android:text="Reset"
            android:id="@+id/button3"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:onClick="reset_Ingredients"
            android:layout_toRightOf="@+id/button2"
            android:layout_gravity="center|bottom" />




    </RelativeLayout>

</LinearLayout>
