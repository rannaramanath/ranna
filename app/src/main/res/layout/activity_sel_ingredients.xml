<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".SelIngredients"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sel_layout"

android:orientation="vertical"
    android:weightSum="1">
    <TextView
        android:id="@+id/choose_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose ingredients for this recipe:-"
        android:padding="5dp"
        android:textSize="22dp"
        android:textColor="#000000"
        android:visibility="invisible"
        android:textIsSelectable="true"
        android:typeface="normal" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_ingredient"></LinearLayout>



    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Add new ingredients"
        android:id="@+id/add_ingredient"
        android:onClick="addIngredient"
        android:layout_marginBottom="10dp"
        android:background="@color/buttoncolor"
        android:layout_gravity="center" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:background="#479C47"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All ingredients checked!"
        android:id="@+id/insert_to_db"
        android:layout_below="@+id/frameLayout2"
        android:layout_marginTop="10dp"
        android:onClick="insert_Ingredients"
        android:visibility="invisible"
        android:background="@drawable/buttonshape"
        android:layout_gravity="center|bottom" />
    </LinearLayout></ScrollView>
