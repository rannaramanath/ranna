<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.habijabi.mealplanner.CreateGroceryList">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remind me!"
        android:background="@drawable/buttonshape"
        android:onClick="setdate"
        android:id="@+id/setdate"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/confirm" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Grocery List"
        android:id="@+id/textViewlist"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/setdate"
        android:layout_centerHorizontal="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/groc_list"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textViewlist"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/datetext"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/textViewlist"
         />


    <TextView
        android:layout_toRightOf="@id/datetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timetext"
        android:layout_above="@+id/groc_list"
        android:layout_alignStart="@+id/groc_list" />




    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="confirm notification time"
        android:background="@drawable/buttonshape"
        android:visibility="invisible"
        android:id="@+id/confirm"
        android:onClick="confirm"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
