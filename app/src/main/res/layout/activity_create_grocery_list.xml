<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.habijabi.mealplanner.CreateGroceryList">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remind me!"
        android:background="@drawable/buttonshape"
        android:onClick="setdate"
        android:id="@+id/setdate"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/confirm" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Grocery List"
        android:id="@+id/textViewlist"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/setdate"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context=".CreateGroceryList"
        android:layout_gravity="center"
        android:layout_weight="1"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/scrollViewCG"
        android:fillViewport="false"
        android:layout_below="@+id/textViewlist"
        android:layout_centerHorizontal="true">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/groc_list"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textViewlist"
        android:layout_centerHorizontal="true" />
    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/time2"
        android:layout_below="@+id/textViewlist">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/datetext" />

        <TextView
            android:layout_marginLeft="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timetext" />
    </LinearLayout>




    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="confirm notification time"
        android:background="@drawable/buttonshape"
        android:visibility="invisible"
        android:id="@+id/confirm"
        android:onClick="confirm"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />




</RelativeLayout>
