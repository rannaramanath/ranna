<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">


    <Button
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:id="@+id/create"
        android:text="Create Recipes"
        android:textColor="#000000"
        android:layout_width="300sp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape"
        android:onClick="create_recipe"
         />

    <Button
        android:layout_gravity="center_horizontal"
        android:id="@+id/view"
        android:layout_marginTop="20dp"
        android:text="View All Recipes"
        android:textColor="#000000"
        android:layout_width="300sp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape"
        android:onClick="view_recipe"

        />

    <Button
        android:layout_gravity="center_horizontal"
        android:id="@+id/random"
        android:layout_marginTop="20dp"
        android:text="Random Recipe"
        android:textColor="#000000"
        android:layout_width="300sp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape"
        android:onClick="random_receipe"

         />

    <Button
        android:layout_gravity="center_horizontal"
        android:id="@+id/suggest"
        android:layout_marginTop="20dp"
        android:text="Suggest Menu with stuff available"
        android:textColor="#000000"
       android:layout_width="300sp"
        android:layout_height="60dp"
        android:onClick="suggest"
        android:background="@drawable/buttonshape"

        />

    <Button
        android:layout_gravity="center_horizontal"
        android:id="@+id/grocery"
        android:layout_marginTop="20dp"
        android:text="Grocery list for this week"
        android:textColor="#000000"
        android:layout_width="300sp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape"

        />











</LinearLayout>
